{
  "manifest_version": 3,
  "name": "linkedIn_automation tool",
  "version": "1.0",
  "description": "messages automation",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
